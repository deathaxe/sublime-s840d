DEF
; <- meta.definition.variable
; <- keyword.control.def

N10DEF
;  ^^^ meta.definition.variable
;  ^^^ keyword.control.def

N10 DEF
;   ^^^ meta.definition.variable
;   ^^^ keyword.control.def

N10 DEF INT
;   ^^^^^^^ meta.definition.variable
;   ^^^ keyword.control.def
;       ^^^ storage.type

DEF INT VAR = 0 ; comment
;             <- meta.definition.variable
; <- keyword.control.def
;   ^^^ storage.type
;       ^^^ variable.other
;           ^ keyword.operator.assignment
;             ^ constant.numeric
;               ^^^^ comment.line

N10DEF INT VAR=0;comment
;  ^^^^^^^^^^^^^ meta.definition.variable
;  ^^^ keyword.control.def
;      ^^^ storage.type
;          ^^^ variable.other
;             ^ keyword.operator.assignment
;              ^ constant.numeric
;               ^^^^ comment.line

N10DEF NCK APW 5 APR 7 APX 7 REAL PHU 5 LLI -100.0 LLU +100.0 VAR[3,3] = SET(1,0,0, 0,1,0, 0,0,1) ; comment
;  ^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^ meta.definition.variable
;  ^^^ keyword.control.def
;      ^^^ storage.modifier.scope
;          ^^^ storage.modifier.access
;              ^ constant.numeric.integer
;                ^^^ storage.modifier.access
;                    ^ constant.numeric.integer
;                      ^^^ storage.modifier.access
;                          ^ constant.numeric.integer
;                            ^^^^ storage.type
;                                 ^^^ storage.modifier.unit
;                                     ^ constant.numeric.integer
;                                       ^^^ storage.modifier.limit
;                                           ^^^^^^ constant.numeric.float
;                                                  ^^^ storage.modifier.limit
;                                                      ^^^^^^ constant.numeric.float
;                                                             ^^^ variable.other
;                                                                ^ punctuation.section.brackets.begin
;                                                                 ^^^ meta.brackets
;                                                                 ^ constant.numeric
;                                                                  ^ punctuation.separator.comma
;                                                                   ^ constant.numeric
;                                                                    ^ punctuation.section.brackets.end
;                                                                      ^ keyword.operator.assignment
;                                                                        ^^^ support.function


;  multiple definitions
N10 DEF INT VAR=0, VAR2[10] = 20 , VAR3 = 40 ; comment
